<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/small_150">

    <TextView
        android:id="@+id/error_dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/font_20"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/error_dialog_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/small_100"
        android:layout_marginBottom="@dimen/small_100"
        android:textSize="@dimen/font_16" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dialog_divider_height"
        android:layout_marginTop="@dimen/small_50"
        android:background="@color/grey" />

    <TextView
        android:id="@+id/error_dismiss_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/small_100"
        android:clickable="true"
        android:focusable="true"
        android:textColor="@color/blue"
        android:textSize="@dimen/font_16"
        android:textStyle="bold" />

</LinearLayout>